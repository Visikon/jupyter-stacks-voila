#!/usr/bin/env bash

cd ../docker
# Remove containers if already running
docker-compose \
	--file docker-compose.run.yml --file docker-compose.build.yml \
	rm -fsv
docker-compose \
	--file docker-compose.run.yml --file docker-compose.build.yml \
	down
# Build and spin
docker-compose \
	--file docker-compose.run.yml --file docker-compose.build.yml up \
	--build --remove-orphans
